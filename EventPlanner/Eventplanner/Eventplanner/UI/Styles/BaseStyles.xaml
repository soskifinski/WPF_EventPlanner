<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="TextboxStyle.xaml"/>
        <ResourceDictionary Source="CheckboxStyle.xaml"/>
        <ResourceDictionary Source="RadioBtnStyle.xaml"/>
        <ResourceDictionary Source="Icons.xaml"/>
        <ResourceDictionary Source="Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <FontFamily x:Key="DefaultFontFamily">Arial</FontFamily>
    <CornerRadius x:Key="DefaultCornerRadius">5</CornerRadius>
    <Thickness x:Key="DefaultPageContentMargin">12,13</Thickness>
    <Thickness x:Key="DefaultBorderFrameContentMargin">20,15</Thickness>


</ResourceDictionary>