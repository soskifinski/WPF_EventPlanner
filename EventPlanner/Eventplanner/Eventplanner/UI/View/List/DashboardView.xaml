<UserControl x:Class="Eventplanner.UI.View.Detail.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Eventplanner.UI.View.Detail"
             xmlns:wrapper="clr-namespace:Eventplanner.UI.Wrapper"
             xmlns:viewModel="clr-namespace:Eventplanner.UI.ViewModel.Detail"
             mc:Ignorable="d" Focusable="True"
             d:DesignHeight="450" d:DesignWidth="800" >
    <UserControl.Resources>
        <ResourceDictionary>
            <!--<ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/BaseStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>-->
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
             <Label Grid.Column="1" Content="Übersicht" FontSize="20"  Padding="30 20" Foreground="#708090" FontWeight="Bold"/>
        </Grid>
        <Grid Grid.Row="1" Background="#FFF5F5F5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <StackPanel Margin="0 0" >
                <Viewbox Grid.Column="0" Grid.Row="2" Margin="0,10,0,10" Height="500" MaxWidth="300">
                    <Calendar Padding="24" Margin="10,10"/>
                </Viewbox>
            </StackPanel>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Zukünftige Veranstaltungen" FontSize="20" Padding="30 20" Foreground="#708090" FontWeight="Bold"/>
                <Border Grid.Row="1"  BorderBrush="AliceBlue" BorderThickness="1" CornerRadius="12" Background="White">
                    <Label Content="Heute" FontSize="16"  Padding="30 20" Foreground="#708090" FontWeight="Bold"/>
                </Border>
                <Border Grid.Row="2"  BorderBrush="AliceBlue" BorderThickness="1" CornerRadius="12" Background="White" Margin="0,2,0,0">
                    <Label Content="Diese Woche" FontSize="16"  Padding="30 20" Foreground="#708090" FontWeight="Bold"/>
                </Border>
               
            </Grid>
            <Grid Grid.Row="2" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Content="Ticker" FontSize="20"  Padding="30 20" Foreground="#708090" FontWeight="Bold"/>
                <Label Grid.Row="1" Content="Besuchende seit xy" FontSize="16"  Padding="30 20" Foreground="#708090" FontWeight="Bold"/>
                <Label Grid.Row="2" Content="Neue Künstlerinnen" FontSize="16"  Padding="30 20" Foreground="#708090" FontWeight="Bold"/>
            </Grid>
        </Grid>
      
        
    </Grid>
</UserControl>
